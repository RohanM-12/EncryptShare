generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

model User {
  id  Int @id @default(autoincrement())
  name String 
  email String @unique 
  password String
  userKeys UserKeys?
}

model UserKeys {
  id Int @id @default(autoincrement())
  userId Int @unique
  publicKey String
  privateKey String
  iv String @default("")
  user User @relation(fields: [userId],references: [id],onDelete: Cascade)
}

model File {
  id Int @id @default(autoincrement()) 
  mongoId String
  name String
  size String
  ownerId Int
  initializationVector String @default("none")
  accessList AccessList[]
}

model AccessList {
  id Int @id @default(autoincrement())
  fileId Int
  userId Int 
  encryptedKey String
  file File @relation(fields: [fileId],references: [id],onDelete: Cascade)
}

